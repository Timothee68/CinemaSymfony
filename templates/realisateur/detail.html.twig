{% extends 'base.html.twig' %}

{% block title %}Liste film!{% endblock %}

{% block body %}
<h1 class= "text-center">{{ realisateur }}</h1>

<div class="container-flui d-flex justify-content-center mt-5">
    <div class="row g-4 mt-5 row-col-4 d-flex justify-content-evenly">
        <div class="card mb-3 " style="max-width: 540px;">
            <div class="row g-0 ">
             <figure>
                <img src = "{{ asset(realisateur.imageRealisateur) }}" class="card-img-top"alt="...">
             </figure>
                <div class="card-body">
                    <p class="card-text"><strong>Née le </strong>{{ realisateur.dateNaissance | date("d/m/Y")}}</p>
                    <p class="card-text"><strong>Sexe : </strong>{{ realisateur.sexe }}</p>
                    <p class="card-text"><strong>Nationalité :</strong>{{ realisateur.origine}}</p>
                </div>
                <hr>
                <div class="card-body">
                    <p class="card-text"><strong>BIOGRAPHIE : </strong></p>
                    <p> {{ realisateur.biographie}} </p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card" style="width: 18rem;">
                <h2 class="card-title text-center">Filmographie</h2>
                <ul class="list-group list-group-flush">
                    {% for films in realisateur.films %}
                    <li class="list-group-item " ><a class="filmographie" href="{{ path('detail_film', {'id': films.id}) }}">{{ films.titreFilm }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>
  
{% endblock %}
